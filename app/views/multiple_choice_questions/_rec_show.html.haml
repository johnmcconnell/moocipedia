- if !@page.nil?
  - @question = @page.content
- if flash[:danger]
  .alert{class: "alert-danger alert-dismissible", role: "alert"}
    %button{type: "button", class: "close", data:{dismiss:"alert"}} &times;
    = flash[:danger]
%p
  %strong View Skills:
  = link_to 'Skills', skills_multiple_choice_question_path(@question)
= @question
= form_for @question, url: submit_answer_multiple_choice_question_path(@question), method: :post do |f|
  - extra_params.each do |(key, value)|
    = f.hidden_field key, value: value
  - @question.answers.each do |answer|
    .form-group
      = f.submit value: answer.text, name: 'answer', class: 'btn btn-primary'
